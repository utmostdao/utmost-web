{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@nuxt/types",
      "@nuxtjs/axios",
      "@types/node",
      "@nuxtjs/i18n",
      "@types/color",
      "nuxt-breakpoints-ssr",
      "@types/jest",
      "@types/mersenne-twister",
      "@nuxtjs/color-mode"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs"
    }
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
